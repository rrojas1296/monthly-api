# Etapa de construcción
FROM node:22-alpine AS builder
RUN npm i -g bun
WORKDIR /app
COPY package*.json ./
RUN bun install
COPY . .
RUN bun run build

# Etapa de producción
FROM node:22-alpine
RUN npm i -g bun
WORKDIR /app
COPY --from=builder /app/package*.json ./
RUN bun install 
COPY --from=builder /app/dist ./dist
CMD ["node", "dist/main.js"]
